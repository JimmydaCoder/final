 <% if user_signed_in? %>
 <div>  <h1 style="color:blue">  <%= "Welcome back #{(current_user.email)}" %> </h2> </div>
<% end %>

<h1>All Posts</h1>




<%= button_to "logout", destroy_user_session_path, method: :delete  %> <%= link_to "Create a New Post", new_post_path, class: "new+post" %>



<ul id="posts">
  <% @posts.each do |post| %>
    <li>

         <h2 style="color:red">  Created by  <%= post.user.email %> </h2> 


     <h3> <%= post.body %></h3>
                 <%= link_to 'Destroy', post, :method => :delete, :confirm => "Are you sure?" %>


    </li>
  <% end %>
</ul>

